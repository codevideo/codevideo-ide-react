{
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "skipLibCheck": true
    }
}